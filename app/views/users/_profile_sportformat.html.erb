<div class="col-lg-6 experience-card">
  <h3>Sports Experience: </h3>
  <% @user.experiences.each do |experience| %>
    <div class="sport-card">
      <div class="sport-name">
        <h4><%= image_tag ("#{experience.sport.name.downcase}.png"), class: "profile-sport" %> <%= experience.sport.name %></h4>
      </div>
    <div class="skill_level">
      <p>Level:
        <% experience.skill_level.times do  %>
          <i class="fas fa-square expertise-level"></i>
        <% end %>
        <% (10 - experience.skill_level).times do  %>
          <i class="fas fa-square expertise-total"></i>
        <% end %>
        (<%= experience.skill_level %>/10)
      </p>
      <p><% level_tag = experience.skill_level %>
        <% case level_tag %>
          <% when 1,2 %>
            <h5>Beginner</h5>
          <% when 3,4 %>
            <h5>Novice</h5>
          <% when 5,6 %>
            <h5>Intermediate</h5>
          <% when 7,8 %>
            <h5>Advanced</h5>
          <% when 9,10 %>
            <h5>Expert</h5>
        <% end %>
      </p>
    </div>
    </div>
    <% end %>
  <br>
  </div>
</div>
