            <%= link_to "Get started!",  events_path, class: "btn-landing" %>
          <% else %>
            <%= link_to t(".sign_in", default: "Get started!"), new_user_session_path, class: "btn-landing" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
