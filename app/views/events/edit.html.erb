   <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <h1>Edit your <%= @event.sport.name %> game</h1>

        <%= simple_form_for @event do |f| %>
          <%= f.association :sport %>
          <%= f.input :address, id: "eventAddress" %>
            <p>Date</p>
             <%= f.input_field :date,  label: "Date", as: :string, class: 'datetimepicker' %>
          <%= f.input :description %>
          <%= f.input :max_players %>
          <%= f.input :price, label: 'Participant fee per person (in Japanese Yen)' %>
          <%= f.button :submit, "Edit event", class: "add-skill-button" %>
        <% end %>
        </div>
     </div>
  </div>
